 <div class="row">
 <h4><div class="public-title p-3">プロフィール編集</div></h4>
</div>
<div class="row">
 <div class="col-8">
  <%= form_with model: @user, method: :patch, url: user_path(@user), local:true do |f| %>
  <table class="table table-borderless">
   <tbody>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100), class:"rounded-circle"; %></td>
      <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  </td>
    </tr>
    <tr>
     <td>ユーザー名</td>
     <td>
      <%= f.text_field :name %>
     </td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= f.email_field :email %></td>
    </tr>
    <tr>
     <td>自己紹介</td>
     <td><%= f.text_area :self_introduction, rows: '5', style: "width:100%" %></td>
   </tbody>
  </table>
 </div>
</div>
<div class="row p-3">
 <%= f.submit "編集内容を保存", class:"btn btn-success w-160px ml-210px" %>
 <% end %>
 <%= link_to "退会する", users_confirm_path, class:"btn btn-danger w-120px ml-220px" %>
</div>
