

<div class="row">
  <h4><div class="public-title p-3">マイページ</div></h4>
</div>
<div>
  <%= image_tag @user.get_profile_image(100,100), class:"rounded-circle"; %>
</div>

<div class="row">
  <div class=" col-6">
   <table class="table table-bordered table-b-c">
    <tbody>
     <tr>
      <td class="table-color-b">ユーザー名</td>
      <td>
       <%= @user.name %>
      </td>
     </tr>
     <tr>
      <td class="table-color-b">自己紹介</td>
      <td>
       <%= @user.self_introduction %>
      </td>
     </tr>
     <tr>
      <td class="table-color-b">メールアドレス</td>
      <td><%= @user.email %></td>
     </tr>
    </tbody>
  </table>
 </div>
</div>

<div class="row mb-4">
  <%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-success ml-5 w-120px" %>
</div>
<% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
<% end %>

