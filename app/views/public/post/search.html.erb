<h1>User search</h1>
<%= form_with url: search_post_index_path, method: :get, local: true do |f| %>
  <%= f.text_field :title %>
  <%= f.submit :search %>
<% end %>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td><%= post.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>