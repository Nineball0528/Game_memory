
<h2>作品編集</h2>

<%= form_with model:@post, local:true do |f| %>

<%= f.file_field :image, placeholder: "作品画像", accept: "image/*" %>

<%= f.text_field :title, autofocus: true, placeholder:"タイトル"%>

<%= f.text_field :introduction, autofocus: true, placeholder:"紹介文"%>

<%= f.submit "変更を保存" %>

<% end %>
